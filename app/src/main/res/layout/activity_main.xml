<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <FrameLayout
        android:id="@+id/top_background"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary">
    </FrameLayout>

    <EditText
        android:id="@+id/fake_searchView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/top_background"
        android:background="@drawable/search_box"
        android:hint=" Search Your Recipe..."
        android:textColorHint="#A46767"
        android:drawableLeft="@drawable/ic_search"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager_randomMeal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="14dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/fake_searchView"/>

</androidx.constraintlayout.widget.ConstraintLayout>